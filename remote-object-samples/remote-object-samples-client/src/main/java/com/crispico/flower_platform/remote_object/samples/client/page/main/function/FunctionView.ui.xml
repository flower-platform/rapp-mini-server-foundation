<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		@external .form-control;
		.serviceCallerSlot .form-control {
			width: 120px;		
		}
		
		.callButton {
			text-transform: none;
		}
		
		.result {
			width: 300px;
			background-color: #eff5ff;
			display: inline-block;
		}	
	</ui:style>
	<g:HTMLPanel>
		<g:Button ui:field="callButton" styleName="btn btn-primary {style.callButton}"/>
		<span class="SLOT_MAIN {style.serviceCallerSlot}"/>
		Result:
		<g:TextBox ui:field="result" styleName="form-control {style.result}"/>
	</g:HTMLPanel>
</ui:UiBinder>